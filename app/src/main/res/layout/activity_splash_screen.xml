<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.splash.SplashScreenActivity">

    <ImageView
        android:id="@+id/imgSplash"
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:src="@drawable/octocat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/img_splash" />

    <TextView
        android:id="@+id/tvProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product"
        app:layout_constraintStart_toStartOf="@id/imgSplash"
        app:layout_constraintEnd_toEndOf="@id/imgSplash"
        app:layout_constraintTop_toBottomOf="@id/imgSplash"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/by"
        app:layout_constraintStart_toStartOf="@id/imgSplash"
        app:layout_constraintEnd_toEndOf="@id/imgSplash"
        app:layout_constraintTop_toBottomOf="@id/tvProduct"
        android:layout_marginTop="8dp"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>